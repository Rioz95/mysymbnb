{% set url = path('ads_show', {'slug': ad.slug})  %}
<div class="col-md-4">
	<div class="card bg-light mb-3 rounded shadow">
		<div class="card-header text-center">
			{{ ad.rooms}}
			chambres,
			<strong>{{ ad.price | number_format(2, ',', ' ') }}&euro; / nuit</strong><br>
			{% if ad.comments  | length > 0 %}
				{% include 'partials/rating.html.twig' with {'rating': ad.avgRatings} %}
			{% else %}
				<small>Pas encore not√©</small>
			{% endif %}
		</div>
		<a href="{{ url }}" style="text-decoration-line: none; color: black;">
			<img src="{{ asset('images/annonce/' ~ ad.coverImage) }}" class="rounded-top" alt="Image de l'appartement" style="height: 200px; width:100%; display: block;">
		</a>
		<div class="card-body">
			<a href="{{ url }}" style="text-decoration-line: none; color: black;">
				<h4 class="card-title">
					{{ ad.title }}
				</h4>
			</a>
			<p class="card-text">
				{{  ad.introduction}}
			</p>
			<a href="{{ url }}" class="btn btn-primary" style="text-decoration-line: none; color: white; float: right;">En savoir plus</a>
			{% if app.user and app.user == ad.author %}
				<a href="{{path('ads_edit', {'slug': ad.slug})}}" class="btn btn-secondary" style="text-decoration: none; color:black;">Modifier l'annonce</a>
			{% endif %}
		</div>
	</div>
</div>
