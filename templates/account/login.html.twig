{% extends 'base.html.twig' %}

{% block title %}Connexion au site
{% endblock %}

{% block body %}
	<div class="container">
		<div class="row">
			<div class="col-md-3">&nbsp;</div>
			<div class="col-md-6">
				<div class="bg-light py-3 px-3">
					<h1 class="text-center">Connectez-vous !</h1>

					{% if hasError %}
						<div class="alert alert-danger">
							Une erreure est survenue, le nom d'utilisateur ou le mot de passe est invalid
						</div>
					{% endif %}

					<form action="{{ path('account_login') }}" method='post'>
						<div class="form-group">
							<label for="email">Email</label>
							<input type="text" name="_username" id="email" class="form-control" placeholder="jhondoe@gmail.com" required value="{{username}}">
						</div>
						<div
							class="form-group my-3">
							{# 	exemple demots de pase #}
							<label style="display: block; margin-bottom: 1rem;">
								<span>Mot de passe</span>
								<div class="passwd-wrap">
									<input type="password" name="_password" id="password" placeholder="Entrer votre mot de passe..."/>
									<button type="button" id="show-passwd">
										<img src="{{ asset('images/users/eye_closed.svg') }}" alt="Show Password"/>
									</button>
								</div>
							</label>
							{# fin #}
						</div>
						<div class="row">
							<d class="col">
								<div class=" form-group checkbox 3x">
									<label for="">
										<input type="checkbox" name="_remember_me" id="">
										remember me
									</label>
								</d>
								<d class="col">
									<a href="#" style="float: right;">Mot de passe oublié?</a>
								</d>
							</div>
							<div class="form-group my-3">
								<button type="submit" class="btn btn-success btn-block">Connexion !</button>
							</div>
						</div>
						<input type="hidden" name="_csrf_token" value="{{csrf_token('authenticate')}}">
					</form>
					<hr/>

					<div class="text-center">
						<p>Pas encore inscrit ?</p>
						<a href="{{ path('account_register') }}" class="btn btn-primary">Créer mon compte membre</a>
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}

{% block javascripts %}
	<script src="js/showpassword.js"></script>
{% endblock %}
