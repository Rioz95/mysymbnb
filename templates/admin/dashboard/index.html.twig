{% extends 'admin/base.html.twig' %}

{% block title %}
	Tableau de bord
{% endblock %}

{% block body %}
	<div class="container-fluid">
		<div class="row">
			<div class="col">
				<div class="card bg-primary text-white mb-3 tex-center">
					<div class="card-body">
						<div class="row">
							<div class="col-4">
								<i class="fas fa-users fa-3x"></i>
							</div>
							<div class="col-8">
								<h4 class="card-title">{{stats.users}}
									utilisateurs</h4>
							</div>
						</div>
					</div>
				</div>
			</div>
			<div class="col">
				<div class="card text-white bg-dark mb-3 text-center">
					<div class="card-body">
						<div class="row">
							<div class="col-4">
								<i class="fas fa-hotel fa-3x"></i>
							</div>
							<div class="col-8">
								<h4 class="card-title text-white">{{stats.ads}}
									annonces postés</h4>
							</div>
						</div>
					</div>
				</div>
			</div>
			<div class="col">
				<div class="card text-white bg-warning mb-3 text-center">
					<div class="card-boy">
						<div class="row">
							<div class="col-4">
								<i class="fas fa-folder fa-3x"></i>
							</div>
							<div class="col-8">
								<h4 class="card-title">{{stats.bookings}}
									réservations</h4>
							</div>
						</div>
					</div>
				</div>
			</div>
			<div class="col">
				<div class="card text-white bg-success mb-3 text-center">
					<div class="card-boy">
						<div class="row">
							<div class="col-4">
								<i class="fas fa-comments fa-3x"></i>
							</div>
							<div class="col-8">
								<h4 class="card-title">{{stats.comments}}
									avis</h4>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
		<hr>
		<div class="row">
			<div class="col">
				<div class="alert alert-success">
					<h2 class="alert-heading my-3 text-center">
						<i class="fas fa-sort-amount-up"></i>
						Les annonces populaires
					</h2>
					<table class="table table-hover">
						<thead>
							<tr>
								<th>Annonce</th>
								<th>Propriétaire</th>
								<th>Moyenne</th>
							</tr>
						</thead>
						<tbody>
							{% for ad in bestAds %}
								<tr>
									<td>{{ ad.title }}</td>
									<td>
										<img src="{{ asset('images/users/' ~ ad.picture) }}" alt="" class="avatar avatar-mini">
										{{ ad.firstName }}
										{{ ad.lastName }}
									</td>
									<td>
										<span class="badge badge-success text-black">
											{{ ad.note | number_format(1, ".", " ") }}
										</span>
									</td>
								</tr>
							{% endfor %}
						</tbody>
					</table>

				</div>
			</div>
			<div class="col">
				<div class="alert alert-danger">
					<h2 class="alert-heading my-3 text-center">
						<i class="fas fa-sort-amount-down"></i>
						Les pires annonces
					</h2>
					<table class="table table-hover">
						<thead>
							<tr>
								<th>Annonce</th>
								<th>Propriétaire</th>
								<th>Moyenne</th>
							</tr>
						</thead>
						<tbody>
							{% for ad in worsads %}
								<tr>
									<td>{{ ad.title }}</td>
									<td>
										<img src="{{ asset('images/users/' ~ ad.picture) }}" alt="" class="avatar avatar-mini">
										{{ ad.firstName }}
										{{ ad.lastName }}
									</td>
									<td>
										<span class="badge badge-success text-black">
											{{ ad.note | number_format(1, ".", " ") }}
										</span>
									</td>
								</tr>
							{% endfor %}
						</tbody>
					</table>

				</div>
			</div>
		</div>
	</div>
{% endblock %}
