<div class="modal" id="modalSimple">
	<div class="modal-dialog" role="document">
		<div class="modal-content">
			<div class="modal-header">
				<h5 class="modal-title">Modal title</h5>
				<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close">
					<span aria-hidden="true"></span>
				</button>
			</div>
			<div class="modal-body">
				<p>Modal body text goes here.</p>
			</div>
			<div class="modal-footer">
				<a id="btn-action" href="" class="btn btn-primary">Save changes</a>
				<button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Anuler</button>
			</div>
		</div>
	</div>
</div>

<script>
	$("a[data-lien]").click(function () { // on recupèere tout les element de la balise a
let lien = $(this).attr("data-lien")
let titre = $(this).attr("data-titre")
let message = $(this).attr("data-message")
let libelleBoutton = $(this).attr("data-libelleboutton");

// On affecte lers element à la modal
$("#btn-action").attr("href", lien);
$(".modal-title").text(titre);
$(".modal-body").text(message);
$("data-titre").text(titre);
$("#btn-action").text(libelleBoutton);

})
</script>
